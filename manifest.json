{
  "name": "PaperG - Ad Display Extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "See PaperG ads displayed on any page",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/jquery/jquery.min.js",
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "browser action demo"
    //"default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["js/jquery/jquery.min.js", "js/jquery/jquery-ui.min.js"]
    }
  ]
}